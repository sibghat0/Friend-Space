<% if current_user.present? %>
    
 
    <div class="question-container">
        <div class="question-form">
            <h1>Questions check</h1>


            <%= form_tag questions_path, :method => 'get' do  %>
                <div class="question-field">
                    <h4>Question 1 : <%= current_user.question1 %></h4>

                        <div class="answer-field">
                            <%= label_tag :answer1, "Answer 1 : ", class: "answer-label" %>
                            <%= password_field_tag :answer1, params[:answer1], class: "answer-input", placeholder: "Enter the answer...." %>
                        </div>
                    <br/>
                </div>

                <div class="question-field">
                    <h4>Question 2 : <%= current_user.question2 %></h4>

                    <div class="answer-field">
                        <%= label_tag :answer2, "Answer 2 : ", class: "answer-label" %>
                        <%= password_field_tag :answer2, params[:answer2], class: "answer-input", placeholder: "Enter the answer...." %>
                    </div>
                </div>
            <div class="question-bottom">
                <%= submit_tag "Login", class: "question-button"%>
            <% end %>
                <%= link_to "Back", users_sign_out_path, method: :delete, class: "question-button" %>
            </div>
        </div>
    </div>
<%end%>